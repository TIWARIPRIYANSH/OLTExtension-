{
  "manifest_version": 3,
  "name": "OLTHelper",
  "version": "1.0",
  "description": "Extracts questions from a page and gets answers.",
  
  "permissions": [
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "*://generativelanguage.googleapis.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
   "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}